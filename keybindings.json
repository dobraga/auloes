[
    // Abrir e fechar aba lateral
    {
        "key": "ctrl+[Quote]",
        "command": "workbench.action.toggleAuxiliaryBar"
    },
    // Executar linha no terminal e pular para proxima linha
    {
        "key": "ctrl+enter",
        "command": "macros.ExecSelectionAndCursorDownPython",
        "when": "editorTextFocus && editorLangId == 'python' && !notebookEditorFocused"
    },
    // Atalhos do R
    {
        "key": "alt+-",
        "command": "type",
        "args": {
            "text": " <- "
        }
    },
    {
        "key": "ctrl+shift+m",
        "command": "type",
        "args": {
            "text": " %>%"
        }
    },
    {
        "key": "ctrl+shift+[Quote]",
        "command": "workbench.action.terminal.new"
    },
    // Alterar foco entre o terminal e o código
    {
        "key": "ctrl+;",
        "command": "workbench.action.focusActiveEditorGroup",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+;",
        "command": "workbench.action.terminal.focus",
        "when": "editorTextFocus"
    },
    // Fechar arquivo ou terminal
    {
        "key": "ctrl+q",
        "command": "-workbench.action.quit"
    },
    {
        "key": "ctrl+w",
        "command": "workbench.action.terminal.kill",
        "when": "terminalFocus"
    },
    // Limpar terminal 
    {
        "key": "ctrl+l",
        "command": "macros.ClearTerminal",
        "when": "editorTextFocus"
    },
    {
        "key": "ctrl+l",
        "command": "workbench.action.terminal.clear",
        "when": "terminalFocus"
    },
    // Limpa Navegação por pagedown e pageup
    {
        "key": "ctrl+pageup",
        "command": "-workbench.action.previousEditor"
    },
    {
        "key": "ctrl+pageup",
        "command": "-selectPrevPageSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-workbench.action.nextEditor"
    },
    {
        "key": "ctrl+pagedown",
        "command": "-selectNextPageSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // Navegar entre arquivos abertos
    {
        "key": "ctrl+tab",
        "command": "workbench.action.nextEditor",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.previousEditor",
        "when": "!terminalFocus"
    },
    {
        "key": "ctrl+tab",
        "command": "selectPrevPageSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "selectNextPageSuggestion",
        "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
    },
    // Navegar entre terminais abertos
    {
        "key": "ctrl+tab",
        "command": "workbench.action.terminal.focusNext",
        "when": "terminalFocus"
    },
    {
        "key": "ctrl+shift+tab",
        "command": "workbench.action.terminal.focusPrevious",
        "when": "terminalFocus"
    }
]